{
  "configurations": {
    "Run Test": {
      "adapter": "vscode-go",
      "configuration": {
        "request": "launch",
        "program": "${fileDirname}",
        "mode": "test",
        "dlvToolPath": "$HOME/go/bin/dlv",
		 "args": [
                "-test.v",
                "-test.run",
                "${Test}"
            ]
	  }
    }
  }
}
